generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PRO
  LIFETIME
}

model User {
  id String @id @default(cuid())
  externalId String? @unique
  email String @unique
  plan Plan @default(FREE)
  expiredPlan DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}